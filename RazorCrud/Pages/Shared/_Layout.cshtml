<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RazorCrud</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">RazorCrud</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Home</a>
                        </li>
                        <li class="dropdown">
                            <a class="nav-link text-dark" asp-area="" asp-page="Actors/Index" id="DropdownMenuLink" role="button" aria-haspopup="true" aria-expanded="false">
                                Actors
                            </a>
                            <div class="dropdown-content" aria-labelledby="DropdownMenuLink">
                                <a class="dropdown-item" asp-page="/Actors/Create">Create actors</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a class="nav-link text-dark" asp-area="" asp-page="Actrices/Index" id="DropdownMenuLink" role="button" aria-haspopup="true" aria-expanded="false">
                                Actrices
                            </a>
                            <div class="dropdown-content" aria-labelledby="DropdownMenuLink">
                                <a class="dropdown-item" asp-page="/Actrices/Create">Create actrices</a>
                            </div>
                        </li>
                        <li class="dropdown">
                            <a class="nav-link text-dark" asp-area="" asp-page="Directors/Index" id="DropdownMenuLink" role="button" aria-haspopup="true" aria-expanded="false">
                                Directors
                            </a>
                            <div class="dropdown-content" aria-labelledby="DropdownMenuLink">
                                <a class="dropdown-item" asp-page="/Directors/Create">Create directors</a>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - RazorCrud - <a asp-area="" asp-page="/Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
